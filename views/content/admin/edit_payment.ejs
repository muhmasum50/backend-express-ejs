<%- include ('../../templates/head.ejs')  %> 

<div class="content-wrapper">
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Jenis Pembayaran</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/payment">Jenis Pembayaran</a></li>
              <li class="breadcrumb-item active">Edit Jenis Pembayaran</li>
            </ol>
          </div>
        </div>
      </div>
    </section>

    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form Edit Jenis Pembayaran</h3>
                </div>

                <form action="/payment/update/<%= payment._id %>?_method=PUT" method="POST">
                    <div class="card-body">
                        <div class="form-group">
                            <label>Tipe Pembayaran</label>
                            <input type="text" class="form-control" value="<%= payment.type %>" name="type" placeholder="Masukkan tipe pembayaran">
                        </div>
                        <div class="form-group">
                            <label>Bank</label>
                            <select class="form-control select2" style="width: 100%;" 
                                multiple="multiple" name="banks" required data-placeholder="Pilih Bank">
                                <% banks.forEach(row => { %>
                                    <option value="<%= row._id %>" 
                                        
                                        <% payment.banks.forEach(bank => { %>
                                            <%= bank._id.toString() == row._id.toString() ? 'selected' : null %>
                                        <% }) %>
                                    >
                                        <%= row.bankName + ' a/n ' + row.name %>
                                    </option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                    
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Simpan</button>
                    </div>
                </form>
            </div>
          </div>
        </div>
      </div>
    </section>
</div>

<%- include ('../../templates/foot.ejs')  %> 