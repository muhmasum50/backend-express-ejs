<%- include ('../../templates/head.ejs')  %> 

<div class="content-wrapper">
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Nominal</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/category">Nominal</a></li>
              <li class="breadcrumb-item active">Tambah Nominal</li>
            </ol>
          </div>
        </div>
      </div>
    </section>

    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form Tambah Nominal</h3>
                </div>

                <form action="/nominal/store" method="POST">
                    <div class="card-body">
                        <div class="form-group">
                            <label>Minimal</label>
                            <select class="form-control select2" style="width: 100%;" name="coinName" required>
                              <option selected="selected" value="">Pilih Koin</option>
                              <% for( let index = 0; index < coinType.length; index++ ) { %>
                                <option value="<%= coinType[index].name %>">
                                    <%= coinType[index].name %>
                                </option>
                              <% } %>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Jumlah Koin</label>
                            <input type="number" class="form-control" name="coinQuantity" placeholder="Masukkan jumlah koin">
                        </div>
                        <div class="form-group">
                            <label>Harga</label>
                            <input type="number" class="form-control" name="price" placeholder="Masukkan harga koin">
                        </div>
                    </div>
                    
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Simpan</button>
                    </div>
                </form>
            </div>
          </div>
        </div>
      </div>
    </section>
</div>

<%- include ('../../templates/foot.ejs')  %> 